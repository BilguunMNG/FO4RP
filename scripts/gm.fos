		player.ShowScreen( SCREEN_SAY, 0, "gm@ask_OPEN_CONTAINER" );
		player.Say( SAY_SAY_TITLE, "Введите ID контейнера:" );
	}
	if( answerI == answerN++ ) //debug mode
		switchDebugMode( player, 0, 0, 0 );
		
	
	if( answerI == answerN++ ) //Mio-панель
	{
		player.ParamBase[ MERC_MASTER_ID ] = 13;
		player.Say( SAY_NETMSG, "Мио-ГМка включена." );
