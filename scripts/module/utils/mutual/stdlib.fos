bool isDisabledSkill( uint skillIndex )
{
	uint[] disabled_skills = { SK_SPEECH, SK_SNEAK };
	return( disabled_skills.find( skillIndex ) != -1 );
}

string genderEnding( CritterMutual& cr )
{
	switch( cr.Stat[ ST_GENDER ] )
	{
		case(0): return ""; //он
		case(1): return "а"; //онј
		case(2): return "о"; //онќ
	}
	
	return "";
}